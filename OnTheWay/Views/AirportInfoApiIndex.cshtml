@model IEnumerable<Application.Domain.Entities.AirportInfo>

@{
    ViewData["Title"] = "AirportInfoApiIndex";
}

<h2>Airport Information</h2>

<p>
    <a asp-action="Create" asp-route-entity="AirportInfo" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.AirportName)</th>
            <th>@Html.DisplayNameFor(model => model.AirportLocation)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.AirportName)</td>
            <td>@Html.DisplayFor(modelItem => item.AirportLocation)</td>
            <td>
                <a asp-action="Edit" asp-route-entity="AirportInfo" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                <a asp-action="Delete" asp-route-entity="AirportInfo" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>