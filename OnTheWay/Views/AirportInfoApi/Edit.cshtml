@model Application.Domain.Entities.AirportInfo
@{
    ViewData["Title"] = "Edit Airport Information";
}
<div class="bg-image">


<h2>Edit Airport Info</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" /> <!-- Hidden field for ID -->

    <div class="form-group">
        <label asp-for="AirportName"></label>
        <input asp-for="AirportName" class="form-control" />
        <span asp-validation-for="AirportName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AirportLocation"></label>
        <input asp-for="AirportLocation" class="form-control" />
        <span asp-validation-for="AirportLocation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImagePath"></label>
        <input type="file" name="imageFile" class="form-control" />
        <span asp-validation-for="ImagePath" class="text-danger"></span>
        <input type="hidden" asp-for="ImagePath" class="form-control" />
        <!-- Display existing image preview -->
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <div>
                <label>Current Image:</label>
                <span>@System.IO.Path.GetFileName(Model.ImagePath)</span>
                <br />
                <img src="@Url.Content($"~/{Model.ImagePath}")" alt="Current Image" style="max-width: 200px; max-height: 150px;" />
            </div>
        }
    </div>

    <!-- Hidden fields for other model properties -->
    <input type="hidden" asp-for="CreatedOn" />
    <input type="hidden" asp-for="UpdatedOn" />
    <input type="hidden" asp-for="Status" />

    <br />
    <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-controller="AirportInfoApi" asp-action="Index">Back to List</a>
</form>

<br />

</div>